// Function to find the minimum element in the given BST.
int minValue(Node* root) {
    if(!root)
        return -1;
    Node* temp=root;    
    while(temp->left!=NULL){
        temp=temp->left;
    }
   return temp->data;
    
}
//function to return maximum element
int maxValue(Node* root) {
    if(!root)
        return -1;
    Node* temp=root;    
    while(temp->right!=NULL){
        temp=temp->right;
    }
   return temp->data;
    
}

